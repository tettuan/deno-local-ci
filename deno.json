{
  "name": "@aidevtool/ci",
  "version": "0.0.6",
  "description": "Modern TypeScript CI/CD runner for Deno v2.x with automated testing, formatting, linting, type checking, and JSR publishing. Features domain-driven design, robust error handling, batch processing, and comprehensive logging for efficient local development and GitHub Actions integration.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tettuan/deno-local-ci.git"
  },
  "bugs": {
    "url": "https://github.com/tettuan/deno-local-ci/issues"
  },
  "homepage": "https://github.com/tettuan/deno-local-ci#readme",
  "author": {
    "name": "tettuan",
    "url": "https://github.com/tettuan"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1.1.1",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^1.0.8"
  },
  "exports": {
    ".": "./mod.ts"
  },
  "publish": {
    "exclude": [
      ".git/",
      ".github/",
      ".vscode/",
      "*.test.ts",
      "tests/",
      "test_data/",
      "examples/",
      "docs/",
      "local_ci.ts"
    ]
  },
  "keywords": [
    "ci",
    "continuous-integration",
    "cicd",
    "testing",
    "deno",
    "deno2",
    "typescript",
    "automation",
    "lint",
    "format",
    "type-check",
    "jsr",
    "jsr-compatible",
    "github-actions",
    "local-development",
    "domain-driven-design",
    "pipeline",
    "batch-processing",
    "error-handling",
    "workflow",
    "build-tools"
  ],
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run --allow-env local_ci.ts",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "ci": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts",
    "ci-debug": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --log-mode debug --log-length M --log-key CI_LOCAL",
    "ci-silent": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --log-mode silent",
    "ci-batch": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --mode batch --batch-size 10",
    "ci-all": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --mode all",
    "update-lock": "deno eval \"try { Deno.removeSync('deno.lock'); } catch { /* ignore */ }\" && deno cache mod.ts && deno cache src/cli_parser.test.ts src/domain_services.test.ts src/logger.test.ts src/types.test.ts tests/3_core/ci_integration.test.ts",
    "publish": "deno publish"
  },
  "fmt": {
    "include": ["src/", "*.ts", "*.md"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "include": ["src/", "*.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
