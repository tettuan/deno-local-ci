{
  "name": "@aidevtool/ci",
  "version": "0.0.1",
  "description": "A comprehensive TypeScript-based CI runner for Deno projects with robust testing, formatting, linting, and type checking capabilities. Built with Domain-Driven Design principles and strong type safety.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tettuan/deno-local-ci.git"
  },
  "bugs": {
    "url": "https://github.com/tettuan/deno-local-ci/issues"
  },
  "homepage": "https://github.com/tettuan/deno-local-ci#readme",
  "author": {
    "name": "tettuan",
    "url": "https://github.com/tettuan"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1.0.0",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^0.1.10"
  },
  "exports": {
    ".": "./mod.ts"
  },
  "publish": {
    "exclude": [
      ".git/",
      ".github/",
      ".vscode/",
      "*.test.ts",
      "tests/",
      "test_data/",
      "examples/",
      "docs/",
      "local_ci.ts"
    ]
  },
  "keywords": [
    "ci",
    "continuous-integration",
    "testing",
    "deno",
    "typescript",
    "automation",
    "lint",
    "format",
    "type-check",
    "jsr-compatible",
    "domain-driven-design",
    "pipeline",
    "batch-processing",
    "error-handling"
  ],
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-run --allow-env local_ci.ts",
    "test": "deno test --allow-read --allow-write --allow-run --allow-env",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "ci": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts",
    "ci-debug": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --log-mode debug --log-length M --log-key CI_LOCAL",
    "ci-silent": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --log-mode silent",
    "ci-batch": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --mode batch --batch-size 10",
    "ci-all": "deno run --allow-read --allow-write --allow-run --allow-env mod.ts --mode all",
    "publish": "deno publish"
  },
  "fmt": {
    "include": ["src/", "*.ts", "*.md"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "include": ["src/", "*.ts"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
